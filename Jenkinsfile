

pipeline {
    agent any
    stages {
        
        stage("build") {
            steps {
                script {
                    echo 'building the application...'
                }
            }
        }
        stage("test") {
            steps {
                script {
                    echo 'testing the application...'
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    echo 'deploying the application...'
                }
            }
        }
    }   
}
